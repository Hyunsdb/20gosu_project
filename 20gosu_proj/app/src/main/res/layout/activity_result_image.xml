<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.a20gosu_proj.ResultImageActivity"
        android:background="@drawable/bkg1">

    <ImageView
            android:layout_width="380dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/resultImage_imageView"
            android:layout_marginLeft="10dp"
    />




    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:layout_marginRight="10dp"
                  android:layout_marginTop="30dp">

        <com.wajahatkarim3.easyflipview.EasyFlipView
                android:id="@+id/easyFlipView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flipOnTouch="true"
                app:flipDuration="500"
                app:flipEnabled="true"
        >


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="뜻1"
                    android:background="@drawable/button_back" android:id="@+id/resultMean_textView1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:id="@+id/resultImage_textView1"
                    android:text="단어 가져오는 중..."
                    android:background="@drawable/button_front"/>
        </com.wajahatkarim3.easyflipview.EasyFlipView>

        <com.wajahatkarim3.easyflipview.EasyFlipView
                android:id="@+id/easyFlipView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flipOnTouch="true"
                app:flipDuration="500"
                app:flipEnabled="true"
        >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/button_back"
                    android:text="뜻1" android:id="@+id/resultMean_textView2"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:id="@+id/resultImage_textView2"
                    android:text="단어 가져오는 중..."
                    android:background="@drawable/button_front"/>
        </com.wajahatkarim3.easyflipview.EasyFlipView>

        <com.wajahatkarim3.easyflipview.EasyFlipView
                android:id="@+id/easyFlipView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flipOnTouch="true"
                app:flipDuration="500"
                app:flipEnabled="true"
        >


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/button_back"
                    android:text="뜻1" android:id="@+id/resultMean_textView3"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/button_front"
                    android:id="@+id/resultImage_textView3"/>
        </com.wajahatkarim3.easyflipview.EasyFlipView>

        <com.wajahatkarim3.easyflipview.EasyFlipView
                android:id="@+id/easyFlipView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flipOnTouch="true"
                app:flipDuration="500"
                app:flipEnabled="true"
        >


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="뜻1"
                    android:background="@drawable/button_back" android:id="@+id/resultMean_textView4"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:id="@+id/resultImage_textView4"
                    android:background="@drawable/button_front"/>
        </com.wajahatkarim3.easyflipview.EasyFlipView>


        <com.wajahatkarim3.easyflipview.EasyFlipView
                android:id="@+id/easyFlipView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flipOnTouch="true"
                app:flipDuration="500"
                app:flipEnabled="true"
        >


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="뜻1"
                    android:background="@drawable/button_back"
                    android:layout_marginBottom="20dp" android:id="@+id/resultMean_textView5"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:id="@+id/resultImage_textView5"
                    android:background="@drawable/button_front"
                    android:layout_marginBottom="20dp"/>
        </com.wajahatkarim3.easyflipview.EasyFlipView>
    </LinearLayout>

</LinearLayout>
