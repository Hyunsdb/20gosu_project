<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.a20gosu_proj.ResultImageActivity"
        android:background="@drawable/bkg1">


    <ImageView
            android:layout_width="380dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/resultImage_imageView"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="30dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >
                <Button
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:id="@+id/resultImage_textView1"
                        android:background="@color/colorAccent"
                />
                <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/wordSound1"
                        android:background="@color/colorAccent"
                />

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:id="@+id/resultImage_textView2"
                        android:background="@color/colorAccent"/>
                <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/wordSound2"
                        android:background="@color/colorAccent"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:background="@color/colorAccent"
                            android:id="@+id/resultImage_textView3"/>
                <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/wordSound3"
                        android:background="@color/colorAccent"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:id="@+id/resultImage_textView4"
                            android:background="@color/colorAccent"/>
                <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/wordSound4"
                        android:background="@color/colorAccent"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:id="@+id/resultImage_textView5"
                            android:background="@color/colorAccent"
                            android:layout_marginBottom="20dp"/>
                <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/wordSound5"
                        android:background="@color/colorAccent"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
